<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#649696">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level1"
        android:background="@drawable/first_level"
        android:layout_alignTop="@+id/level2"
        android:layout_toLeftOf="@+id/level2"
        android:layout_toStartOf="@+id/level2"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level2"
        android:background="@drawable/locked_level"
        android:layout_above="@+id/level5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level3"
        android:background="@drawable/locked_level"
        android:layout_alignTop="@+id/level2"
        android:layout_toRightOf="@+id/level2"
        android:layout_toEndOf="@+id/level2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level4"
        android:background="@drawable/locked_level"
        android:layout_alignTop="@+id/level5"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignStart="@+id/level1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level5"
        android:background="@drawable/locked_level"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/level3"
        android:layout_toStartOf="@+id/level3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level6"
        android:background="@drawable/locked_level"
        android:layout_alignTop="@+id/level5"
        android:layout_alignLeft="@+id/level3"
        android:layout_alignStart="@+id/level3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level8"
        android:background="@drawable/locked_level"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/level5"
        android:layout_toLeftOf="@+id/level3"
        android:layout_toStartOf="@+id/level3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level7"
        android:background="@drawable/locked_level"
        android:layout_alignTop="@+id/level8"
        android:layout_toLeftOf="@+id/level8"
        android:layout_toStartOf="@+id/level8"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level9"
        android:background="@drawable/locked_level"
        android:layout_alignTop="@+id/level8"
        android:layout_alignLeft="@+id/level6"
        android:layout_alignStart="@+id/level6" />
</RelativeLayout>